<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%-5level %c - %msg%n"/>
            <!--PatternLayout pattern="%style{%d{HH:mm:ss}}{cyan} %highlight{%-5level} %style{[%t]}{magenta} %style{%c{1}.%M}{yellow} - %msg%n"/-->
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="com.hotel.client" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Root level="DEBUG">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>